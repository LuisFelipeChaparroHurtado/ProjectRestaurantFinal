@model IEnumerable<ProductType>

@{
    ViewData["Title"] = "Admin of Product Type";
}
<div class="container-fluid">
    <div class="d-flex justify-content-center p-5">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" width="75%">@Html.DisplayNameFor(mi => mi.Name)</th>
                    <th scope="col" width="25%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var productType in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(mi => productType.Name)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="ProductType" asp-action="Edit" asp-route-id="@productType.Id"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                            <a class="btn btn-danger text-white" asp-controller="ProductType" asp-action="Delete" asp-route-id="@productType.Id"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div class="text-white mb-4" style="position:fixed; right:25px; bottom:35px;">
    <a asp-controller="ProductType" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>&nbsp; Add New
    </a>

</div>

