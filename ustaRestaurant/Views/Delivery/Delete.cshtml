@model Delivery

@{
    ViewData["Title"] = "Delete Delivery";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Delete confirmation for @Model.NameDelivery</h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                     <div class="form-group">
                        <label asp-for="NameDelivery" class="control-label"></label>
                        <input asp-for="NameDelivery" class="form-control" />
                        <span asp-validation-for="NameDelivery" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input  asp-for="StateDelivery" class="form-check-input" type="checkbox" id="flexCheckIndeterminate">
                        <label asp-for="StateDelivery" class="form-check-label" for="flexCheckIndeterminate">
                        </label>
                        <span asp-validation-for="StateDelivery" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-end"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
            </div>
        </div>
    </div>
</div>

